{% extends 'base.html.twig' %}

{% block title %}
<title>EQUIP</title>
{% endblock %}

{% block add_style %}
<!-- <link href="css/inici.css" rel="stylesheet"> -->

<link rel="stylesheet" href="{{asset('css/equip.css')}}">
{% endblock %}


{% block inici_body %}


<section id="intro">
  <div class="intro-container">
    <h1 id="titolInici">Dades Equip 0{{datos.codi}}</h1><br>

    <div id="paragrafInici">
      <img src="{{ asset('img/inici/tick.png') }}" alt="Descripción de la imagen" id="imatgeInici">

    </div>

    <div id="paragrafInici">

      <div class="container">
        <h3>Gestió D'equips</h3>
        <div class="field">Codi: {{datos.codi}}</div>
        <div class="field">Nom: {{datos.nom}}</div>
        <div class="field">Cicle: {{datos.cicle}}</div>
        <div class="field">Curs: {{datos.curs}}</div><br>
        <div class="field">Membres:</div>
        {% for miembro in datos.membres %}
        <div class="member">{{ miembro }}</div>
        {% endfor %}
      </div>

    </div>
      <div id="paragrafFinal">
        <a href="{{path('inici')}}"> <img src="{{ asset('img/inici/home.png') }}" alt="Descripción de la imagen"
            id="imatgeHome">
        </a>
        <p>Torna a l'inici</p>
    </div>
  </div>

  </div>
</section>
{% endblock %}